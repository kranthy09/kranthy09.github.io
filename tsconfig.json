{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/AnimatedCounter.jsx", "app/components/NavigationProgress.jsx", "app/components/NavItem.jsx", "app/components/PageTransition.jsx", "app/components/ParallaxSection.jsx", "app/components/ScrollProgress.jsx", "app/components/StatisticsSection.jsx", "app/components/UserStaggerAnimation.jsx", "app/components/UseScrollAnimation.jsx", "app/features/page.jsx", "app/influencer/page.jsx", "app/signin/page.jsx", "app/casestudies/page.jsx", "app/brand/page.jsx", "app/about/loading.jsx", "app/about/page.jsx"],
  "exclude": ["node_modules"]
}
